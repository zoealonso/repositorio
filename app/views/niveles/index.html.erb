<% content_for :opcion, 'juegos' %>
<% content_for :titulo do %>
	Puntuaciones por niveles
<% end %>
<% content_for :subtitulo do %>
	Puntuaciones obtenidas de <%= @puntuacion.usuario.nombre %> en el juego <%= @puntuacion.juego.nombre %>
<% end %>

<ol class="breadcrumb">
  <li><%= link_to 'Juegos', root_path %></li>
  <li><%= link_to 'Puntuaciones en ' + @puntuacion.juego.nombre, puntuaciones_juego_path(@puntuacion.juego.id) %></li>
  <li class="active">Puntuaciones por nivel de <%= @puntuacion.usuario.nombre %></li>
</ol>

<table class="table table-striped table-hover">
	<thead>
		<tr>
			<th>Nivel</th>
			<th class="puntuacion" style="width: 10em;">Puntuaci√≥n</th>		
		</tr>
	</thead>
	<tbody>
		<% @niveles.each do |nivel| %>
			<tr>
				<td>
					<%= nivel.numero %>	
				</td>
				<td class="puntuacion">
					<%= nivel.puntos %>
				</td>
			</tr>
		<% end %>
		<tr>
			<th>Puntos totales en el juego</th>
			<th class="puntuacion"><%= @puntuacion.puntos %></th>
		</tr>
	</tbody>
</table>
