<h2>Iniciar Sesión</h2>
<br />
<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>

	<div class="form-group <%= clase_error resource, :email %>">    
	    <label class="sr-only" for="usuario_email">Email</label>
	    <div class="input-group">
	    	<div class="input-group-addon">
	    		<span class="glyphicon glyphicon-envelope"></span>
	    	</div>
	    	<%= f.email_field :email, :autofocus => true, :class => 'form-control', :placeholder => 'Email' %>
	    </div>
	    <%= errores resource, :email %>
	</div>	
	
	<div class="form-group <%= clase_error resource, :password %>">    
	    <label class="sr-only" for="usuario_password">Contraseña</label>
	    <div class="input-group">
	    	<div class="input-group-addon">
	    		<span class="glyphicon glyphicon-lock"></span>
	    	</div>
		    <%= f.password_field :password, :class => 'form-control', :placeholder => 'Contraseña' %>
	    </div>
	    <%= errores resource, :password %>
	</div>
	
	<% if devise_mapping.rememberable? -%>
		<div class="checkbox">
	  		<label> <%= f.check_box :remember_me %> Recordar contraseña </label>
	    </div>
	<% end %>
	
	<div class="botones">
	    <%= f.submit "Iniciar sesión", :class => 'btn btn-primary' %>
	</div>

<% end %>

<%= render "devise/shared/links" %>