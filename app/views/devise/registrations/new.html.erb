<h2>Registrarme</h2>
<br />
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

	<div class="form-group <%= clase_error resource, :nombre %>">    
	    <label class="sr-only" for="usuario_nombre">Nombre de usuario</label>
	    <div class="input-group">
	    	<div class="input-group-addon">
	    		<span class="glyphicon glyphicon-user"></span>
	    	</div>
	    	<%= f.text_field :nombre, :autofocus => true, :class => 'form-control', :placeholder => 'Nombre de usuario' %>
	    </div>
	    <%= errores resource, :nombre %>
	</div>	

	<div class="form-group <%= clase_error resource, :email %>">    
	    <label class="sr-only" for="usuario_email">Email</label>
	    <div class="input-group">
	    	<div class="input-group-addon">
	    		<span class="glyphicon glyphicon-envelope"></span>
	    	</div>
	    	<%= f.email_field :email, :autofocus => false, :class => 'form-control', :placeholder => 'Email' %>
	    </div>
	    <%= errores resource, :email %>
	</div>	
	
	<div class="form-group <%= clase_error resource, :password %>">    
	    <label class="sr-only" for="usuario_password">Contraseña</label>
	    <div class="input-group">
	    	<div class="input-group-addon">
	    		<span class="glyphicon glyphicon-lock"></span>
	    	</div>
		    <%= f.password_field :password, :class => 'form-control', :placeholder => 'Contraseña', autocomplete: "off" %>
	    </div>
	    <!--<% if @minimum_password_length %>
    		<div class = "caracteres">(<%= @minimum_password_length %> caracteres mínimo)</div>
    	<% end %><br /> -->
    	<%= errores resource, :password %>
	</div>
	
	<div class="form-group <%= clase_error resource, :password_confirmation %>"> 			    
	    <label class="sr-only" for="usuario_password">Contraseña</label>
	    <div class="input-group">
	    	<div class="input-group-addon">
	    		<span class="glyphicon glyphicon-lock"></span>
	    	</div>
		    <%= f.password_field :password_confirmation, :class => 'form-control', :placeholder => 'Confirmar contraseña', autocomplete: "off" %>		    
	    </div>	 
	    <%= errores resource, :password_confirmation %>   
	</div>
	
	<div class="botones">
	    <%= f.submit "Registrarme", :class => 'btn btn-primary' %>
	</div>
	
<% end %>

<%= render "devise/shared/links" %>
